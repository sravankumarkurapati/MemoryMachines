# Application Environment
ENVIRONMENT=local

# Queue Configuration (redis for local, pubsub for cloud)
QUEUE_TYPE=redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_QUEUE_NAME=log-ingestion

# GCP Configuration (for cloud deployment)
GCP_PROJECT_ID=
PUBSUB_TOPIC=log-ingestion
PUBSUB_SUBSCRIPTION=log-processing-worker

# Database Configuration (emulator for local, firestore for cloud)
DATABASE_TYPE=emulator
FIRESTORE_EMULATOR_HOST=localhost:8080

# Processing Configuration
ENABLE_PII_REDACTION=true
PROCESSING_TIME_PER_CHAR=0.05

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
MAX_REQUEST_SIZE=10485760